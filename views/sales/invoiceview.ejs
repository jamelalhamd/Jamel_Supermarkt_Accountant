<div class="container">
    <!-- Invoice Details Section -->
    <div class="invoice-details-section p-4 rounded shadow-sm" style="max-width: 800px; margin: 20px auto;">
      <h2 class="text-center">Invoice Details</h2>
      
      <!-- Invoice ID and Client Name -->
      <div class="row mb-3">
        <div class="col">
          <h4>Invoice ID: <%= data.salesinvoiceID %></h4>
        </div>
        <div class="col text-end">
          <h4>Client Name: <%= data.invoice.NameClient %></h4>
        </div>
      </div>
      
      <!-- Employee Info -->
      <div class="row mb-3">
        <div class="col">
          <h5>Employee: <%= user.employee_name %> <%= user.employee_lastname %> </h5>
          <h5> Employee ID  : <%= user.employee_id %></h5>
        </div>
        <div class="col text-end">
          <h6>Date: <%= data.invoice.salesinvoiceDate.toISOString().split('T')[0] %></h6>
        </div>
      </div>
  
      <!-- Total Price and Number of Items -->
      <div class="row mb-3 ">
        <div class="col">
          <h5>Total Price: $<%= data.totalPrice.toFixed(2) %></h5>
        </div>
        <div class="col text-end">
          <h5>Number of Items: <%= data.items.length %></h5>
        </div>
      </div>
    </div>
  
    <!-- List of Invoice Items -->
    <h3 class="text-center mt-5">Items in Invoice</h3>
    <div class="table-responsive rounded shadow-sm">
      <% if (data.items && data.items.length > 0) { %>
      <table class="table table-striped table-bordered text-center mt-4">
        <thead>
          <tr>
            <th>#</th>
            <th>Item ID</th>
            <th>Barcode</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
   
          </tr>
        </thead>
        <tbody>
          <% data.items.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.itemid %></td>
            <td><%= item.baracode %></td>
            <td><%= item.item_name %></td>
            <td><%= item.Quantity %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td>$<%= item.total.toFixed(2) %></td>
         
          </tr>
          <% }) %>
        </tbody>
      </table>
 
      <div class="text-center mt-4">
        <a href="/salesinvoice" id="save-pdf" class="btn btn-success">Back</a>
        <button   id="save-pdf" class="btn btn-primary">Save as PDF</button>
      
        <button class="btn btn-primary mx-4" onclick="window.print()">Print</button>
        
      </div>

      

      <% } else { %>
      <p class="text-center">No items found for this invoice.</p>
      <% } %>
    </div>
    <script>
        document.getElementById("save-pdf").addEventListener("click", function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // إعداد محتويات الفاتورة التي تريد حفظها
            doc.text("رقم الفاتورة: <%= data.salesinvoiceID %>", 10, 10);
            doc.text("اسم العميل: <%= data.invoice.NameClient %>", 10, 20);
            doc.text("اسم الموظف: <%= user.employee_name %> <%= user.employee_lastname %>", 10, 30);
            doc.text("السعر الإجمالي: $<%= data.totalPrice.toFixed(2) %>", 10, 40);
            doc.text("عدد العناصر: <%= data.items.length %>", 10, 50);
    
            // حفظ الملف كـ PDF
            doc.save("invoice_<%= data.salesinvoiceID %>.pdf");
        });
    </script>
    