
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="form-container">
          <h2 class="mb-4">Edit Store: <%= data.store.StoreName %></h2>
          <% if (data.user) { %>
            <div class="alert alert-success mt-4">
              <%= data.user %>
            </div>
          <% } %>
          <!-- Form for editing store details -->
          <form action="/editstore/<%= data.store.StoreID %>" method="POST">
            <div class="form-group mb-3">
              <label for="StoreName">Store Name</label>
              <input
                type="text"
                class="form-control"
                id="StoreName"
                name="StoreName"
                value="<%= data.store.StoreName %>"
                required
              >
            </div>

            <div class="form-group mb-3">
              <label for="Location">Location</label>
              <input
                type="text"
                class="form-control"
                id="Location"
                name="Location"
                value="<%= data.store.Location %>"
                required
              >
            </div>

            <div class="form-group mb-4">
              <label for="Address">Address</label>
              <input
                type="text"
                class="form-control"
                id="Address"
                name="Address"
                value="<%= data.store.Address %>"
                required
              >
            </div>

            <!-- Buttons: Save, Cancel, and Delete -->
            <div class="btn-container">
              <button type="submit" class="btn btn-primary">Save Changes</button>

              <!-- Cancel button -->
              <a href="/storeview" class="btn btn-secondary">Cancel</a>

              <!-- Delete form -->
            
            </div>
          </form>
          <% if (data.store) { %>
            <form method="POST" action="/deletestore/<%= data.store.StoreID %>" class="mt-3">
              <button type="submit" class="btn btn-danger">
                Delete Store
              </button>
            </form>
          <% } %>
          <!-- Display any user messages -->
      
        </div>
      </div>
    </div>
  </div>

