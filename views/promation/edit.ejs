<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="form-container">
        <h2 class="mb-4">Edit Promotion: <%= data.promotion.PromotionName %></h2>
        <% const promotion = data.promotion; console.log(data.promotion.PromotionID); %>
        
        <!-- Display user message with dynamic alert style -->
        <% if (data.msg && data.style) { %>
          <div class="alert alert-<%= data.style %> mt-4">
            <%= data.msg %>
          </div>
        <% } %>

        <!-- Form for editing promotion details -->
        <form action="/updatepromotion/<%= data.promotion.PromotionID %>" method="POST">
          <div class="form-group mb-3">
            <label for="PromotionName">Promotion Name</label>
            <input
              type="text"
              class="form-control"
              id="PromotionName"
              name="PromotionName"
              value="<%= data.promotion.PromotionName %>"
              required
            >
          </div>

          <div class="form-group mb-3">
            <label for="PromotionName">Promotion Name</label>
            <input
              type="text"
              class="form-control"
              id="Description"
              name="Description"
              value="<%= data.promotion.Description %>"
              required
            >
          </div>

          <div class="form-group mb-3">
            <label for="StartDate">Start Date</label>
            <input
              type="date"
              class="form-control"
              id="StartDate"
              name="StartDate"
              
              value="<%= data.promotion.StartDate ? new Date(data.promotion.StartDate).toISOString().split('T')[0] : '' %>"
              required
            >
          </div>

          <div class="form-group mb-3">
            <label for="EndDate">End Date</label>
            <input
              type="date"
              class="form-control"
              id="EndDate"
              name="EndDate"
              value="<%= data.promotion.EndDate ? new Date(data.promotion.EndDate).toISOString().split('T')[0] : '' %>"
              required
            >
          </div>

          <div class="form-group mb-4">
            <label for="DiscountPercentage">Discount Percentage (%)</label>
            <input
              type="number"
              class="form-control"
              id="DiscountPercentage"
              name="DiscountPercentage"
              step="0.01"
              min="0"
              max="100"
              value="<%= data.promotion.DiscountPercentage %>"
              required
            >
          </div>

          <!-- Buttons: Save and Cancel -->
          <div class="btn-container">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/promotions" class="btn btn-secondary">Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>




