
    <div class="container mt-5">


    
        

        <h1>Supermarket Dashboard</h1>

        <div class="container mt-4">
            <form action="/showdashboard" method="POST" class="d-flex justify-content-center align-items-center">
                
                <!-- Barcode Field -->
                <div class="form-group mb-3 me-3">
                    <label for="Barcode">From Date</label>
                    <input
                        type="date"
                        class="form-control"
                        id="fromdate"
                        name="fromdate"
                        value="<%= data.date1 ? data.date1 : '' %>"
                       required
                    >
                </div>
                
                <!-- Item Name Field -->
                <div class="form-group mb-3 me-3">
                    <label for="ItemName">To Date</label>
                    <input
                        type="date"
                        class="form-control"
                        id="todate"
                        name="todate"
                        value="<%=data.date2?data.date2: Date.now  %>"
                    required
                 
                    >
                </div>
        
                <!-- Buttons: Add Item and Back -->
                <div class="form-group d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Show</button>
             
                </div>
        
            </form>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Items</h5>
                        <p class="card-text"><%= data.totallitems %></p> <!-- Replace with actual data -->
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Suppliers</h5>
                        <p class="card-text"><%=data.suppliers_total %></p> <!-- Replace with actual data -->
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Sales Invoices</h5>
                        <p class="card-text"><%= data.total_invoice %></p> <!-- Replace with actual data -->
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Promotions</h5>
                        <p class="card-text"><%= data.promotion_total %></p> <!-- Replace with actual data -->
                    </div>
                </div>
            </div>
        </div>













        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Purchase Items Costs</h5>
                        <p class="card-text"><%= data.total_kauf %></p> <!-- Replace with actual data -->
                    </div>
                </div>
            </div>
            <div class="col-md-3">
