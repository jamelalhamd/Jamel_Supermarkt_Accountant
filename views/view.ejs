<% const emp = data.employees[0]; %>
<% const storeDetail = data.storedetails.find(store => emp.storeID === store.StoreID); %>

<nav class="px-2 mt-4" style="width: 88%" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/dash" class="text-decoration-none">Back</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= `${emp.employee_name} ${emp.employee_lastname}` %>
    </li>
  </ol>
</nav>

<div class="container mt-5" style="width: 88%">
  <div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between">
      <h5 class="mb-0">Employee Details</h5>
      <span>ID: <%= emp.employee_id %></span>
    </div>
    
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">First Name</h6>
          <p><%= emp.employee_name %></p>
        </div>
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">Last Name</h6>
          <p><%= emp.employee_lastname %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">Telephone</h6>
          <p><%= emp.employee_phone %></p>
        </div>
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">Email</h6>
          <p><%= emp.employee_email %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">Gender</h6>
          <p><%= emp.employee_gender %></p>
        </div>
        <div class="col-md-6 mb-4">
          <h6 class="fw-bold">Role</h6>
          <p><%= emp.employee_role %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 mb-4">
          <h6 class="fw-bold">Address</h6>
          <p><%= emp.employee_address %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 mb-4">
          <h6 class="fw-bold">Branch</h6>
          <p><%= storeDetail ? storeDetail.StoreName : 'Store not found' %></p>
        </div>
      </div>
    </div>
    
    <div class="card-footer d-flex justify-content-end">
      <a href="/dash" class="btn btn-secondary me-2">Back to Employees</a>
      <a href="/edit/<%= emp.employee_id %>" class="btn btn-primary">Edit Employee</a>
    </div>
  </div>
</div>
