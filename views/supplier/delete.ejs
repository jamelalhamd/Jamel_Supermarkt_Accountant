<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="form-container">
        <h2 class="mb-4">Edit Supplier: <%= data.supplier.SupplierName %></h2>
        <% const supplier = data.supplier; console.log(data.supplier.SupplierID); %>
        
        <!-- Display user message with dynamic alert style -->
    

        <!-- Form for editing supplier details -->
        <form action="/deletesupplier/<%= data.supplier.SupplierID %>" method="POST">
          <div class="form-group mb-3">
            <label for="SupplierName">Supplier Name</label>
            <input
              type="text"
              class="form-control"
              id="SupplierName"
              name="SupplierName"
              value="<%= data.supplier.SupplierName %>"
              required
            >
          </div>

          <div class="form-group mb-3">
            <label for="Phone">Phone</label>
            <input
              type="text"
              class="form-control"
              id="Phone"
              name="Phone"
              value="<%= data.supplier.Phone %>"
            >
          </div>

          <div class="form-group mb-3">
            <label for="Address">Address</label>
            <input
              type="text"
              class="form-control"
              id="Address"
              name="Address"
              value="<%= data.supplier.address %>"
            >
          </div>

          <div class="form-group mb-4">
            <label for="Email">Email</label>
            <input
              type="email"
              class="form-control"
              id="Email"
              name="Email"
              value="<%= data.supplier.email %>"
            >
          </div>


          <!-- Buttons: Save and Cancel -->
              <a href="/supplierdash" class="btn btn-secondary">Cancel</a>
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
           Delete Invoice
         </button>
        
        </form>

     
        
        
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete the Supplier :<%= data.supplier.SupplierID %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure that you want to delete this Supplier <%= data.supplier.SupplierName %>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/deletesupplier/<%= data.supplier.SupplierID %>" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>