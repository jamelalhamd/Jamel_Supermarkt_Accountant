<div class="container mt-5">
  <h1 class="mb-4">View Cost Details</h1>
  
  <% if (data.msg && data.style) { %>
    <div class="alert alert-<%= data.style %> mt-4">
      <%= data.msg %>
    </div>
  <% } %>

  <% const cost = data.costs; %> <!-- assuming cost is passed from the server -->
  
  <div class="card mb-4">
      <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Cost Information</h5>
      </div>
      <div class="card-body">
          <h5 class="card-title">Cost ID: <%= cost.costID %></h5>
          <p class="card-text"><strong>Cost Type:</strong> <%= cost.costType %></p>
          <p class="card-text"><strong>Amount:</strong> <%= cost.amount %></p>
          <p class="card-text"><strong>Description:</strong> <%= cost.description %></p>
          <p class="card-text"><strong>Reference ID:</strong> <%= cost.referenceID %></p>
          <p class="card-text"><strong>Employee ID:</strong> <%= cost.employee_id %></p>
          <p class="card-text"><strong>Store ID:</strong> <%= cost.store_id %></p>
          <p class="card-text"><strong>Created At:</strong> 
              <%= new Date(cost.CreatedAt).toLocaleDateString('en-GB') %> 
              <%= new Date(cost.CreatedAt).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) %>
          </p>
          <p class="card-text"><strong>Updated At:</strong> 
              <%= new Date(cost.UpdatedAt).toLocaleDateString('en-GB') %> 
              <%= new Date(cost.UpdatedAt).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) %>
          </p>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <a href="/editcost/<%= cost.costID %>" class="btn btn-primary me-2">
          <i class="bi bi-pencil"></i> Edit Cost
        </a>

        <form method="POST" action="/deletecost/<%= cost.costID %>" class="d-inline">
          <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Are you sure you want to delete this cost?');">
            <i class="bi bi-trash"></i> Delete Cost
          </button>
        </form>

        <a href="/mainboard" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back to Costs
        </a>
      </div>
  </div>
</div>

