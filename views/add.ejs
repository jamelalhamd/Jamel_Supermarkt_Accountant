
<% const stores = data.stores;  %>

<% if (data.msg && data.style) { %>
  <div class="alert alert-<%= data.style %> mt-4">
    <%= data.msg %>
  </div>
<% } %>


<form action="/adduser" method="post" class="mx-0 row gx-3 gy-4 mt-3">
<div class="col-md-6">
  <label for="inputfirstName4" class="form-label">First Name:</label>
  <input     name="firstname"
    placeholder="Ali..."
    type="text"
    class="form-control"
    id="inputfirstName4"
  />
</div>

</div>
<div class="col-md-6">
  <label for="inputlastName4" class="form-label">Last Name:</label>
  <input     name="lastname"
    placeholder="Hassan..."
    type="text"
    class="form-control"
    id="inputlastName4"
  />
</div>

<div class="col-md-6">
  <label for="inputemail4" class="form-label">Email:</label>
  <input     name="email"
    placeholder="ali@gmail.com"
    type="email"
    class="form-control"
    id="inputemail4"
  />
</div>
<div class="col-md-6">
  <label for="inputtele4" class="form-label">Password:</label>
  <input
    name="password"
    type="password"
    class="form-control"
    id="inputtele4"
  />
</div>

<div>
  <div class="col-md-6">
    <label for="inputGender" class="form-label">Gender</label>
    <select name="gender" class="form-control" id="inputGender">
      <option value="" disabled selected>Select your gender</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>
</div>

<div class="col-md-6">
  <label for="inputfirstName4" class="form-label">Phone</label>
  <input     name="phone"
    placeholder="017682216044"
    type="number"
    class="form-control"
    id="inputfirstName4"
  />
</div>
<div class="col-md-6">
  <label for="inputAddress" class="form-label">Address:</label>
  <textarea
    placeholder="Sudstra 7 3314 Bad Driburg"
    class="form-control"
    id="inputAddress"
    rows="3"
    name="address"
  ></textarea>
</div>


<div class="col-md-6">
  <label for="inputstore" class="form-label">Store:</label>
  <select name="store" id="inputstore" class="form-select" required>
    <option value="0"  >Choose here...</option>
    <% stores.forEach(element => { %>
      <option value="<%= element.StoreID %>" ><%= element.StoreName %></option>
    <% }) %>
  </select>
</div>

<div>
  <div class="col-md-6">
    <label for="inputRole" class="form-label">Role:</label>
    <select name="role" id="inputRole" class="form-select">
      <option selected hidden disabled>Choose here ...</option>

      <option value="Casher">Cashier</option>
      <option value="Chef">Chef</option>

      <option value="HR">Human Resources (HR)</option>
      <option value="Store">Store Manager</option>
      <option value="Buyer">Purchasing Manager</option>
      <option value="Accountant">Accountant</option>
 
    </select>
  </div>
  
</div>

<div class="col-12">
  <button    type="submit" class="btn btn-primary">Submit</button>

</div>
<h5><%= data.user ? data.user : '' %></h5>

</form>
