<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>

    <style>
        body {
          text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .5);
          box-shadow: inset 0 0 0rem rgba(0, 0, 0, .5);
          justify-content: center;
          align-items: center;
          height: 100vh;
          margin: 0;
        }

        .cover-container {
          max-width: 60em;
        }
    </style>
</head>

<body class="d-flex h-100 text-center text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../component/header.ejs', { currentPage : "reset" }) %>
        <div class="row justify-content-center align-self-center w-100">
            <div class="col-md-6 col-lg-6">
                <h1 class="mb-4">Reset Password</h1>

                <% if (data.msg && data.style) { %>
                    <div class="alert alert-<%= data.style %> mt-4">
                      <%= data.msg %>
                    </div>
                  <% } %>

                <% if (typeof message !== 'undefined' && message) { %>
                  <div class="alert alert-danger" role="alert" aria-live="assertive">
                      <%= message %>
                  </div>
                <% } %>

                <form method="post" action="/reset" class="text-start mx-auto mt-5">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input name="email" type="email" class="form-control" id="email" required placeholder="Enter your email address">
                    </div>

                    <button type="submit" class="btn btn-primary">Send </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
